{
  "name": "periscope",
  "version": "1.0.0",
  "description": "Track public predictions and verify outcomes with Perimeter scoring",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd frontend && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "cd frontend && npm run build",
    "start": "node dist/server/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "predictions",
    "forecasting",
    "accuracy",
    "verification"
  ],
  "author": "Mehmet T. AkalÄ±n",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "bullmq": "^5.4.0",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "pino-pretty": "^10.3.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}

